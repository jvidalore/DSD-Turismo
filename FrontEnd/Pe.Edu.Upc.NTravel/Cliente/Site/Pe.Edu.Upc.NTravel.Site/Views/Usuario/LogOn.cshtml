@section Head{
    <link href="@Url.Content("~/Theme/Login.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Components/NTravel/Login/login.js")" type="text/javascript"></script>
}
<div class="loginContent" id="divLogin">
    <div class="resumen">
        <div class="icons">
            <img alt="" src="@Url.Content("~/Theme/images/user.png")" />
            <img alt="" src="@Url.Content("~/Theme/images/student.png")" />
            <img alt="" src="@Url.Content("~/Theme/images/implement.png")" />
        </div>
        <div class="icons">
            <img alt="" src="@Url.Content("~/Theme/images/presentation.png")" />
            <img alt="" src="@Url.Content("~/Theme/images/verify.png")" />
            <img alt="" src="@Url.Content("~/Theme/images/mark.png")" />
        </div>
        <div class="icons">
            <img alt="" src="@Url.Content("~/Theme/images/idea.png")" />
            <img alt="" src="@Url.Content("~/Theme/images/like.png")" />
            <img alt="" src="@Url.Content("~/Theme/images/trade.png")" />
        </div>
    </div>
    <div class="loginForm">
        <h2>
            Iniciar Sesion</h2>
        <form id="frmLogin" action="Usuario/LogOn">
        <table>
            <tr>
                <td>
                    Usuario:
                </td>
                <td>
                    <input name="Correo" type="text" class="validable" validation="required true" errormessage="Ingrese su usuario" />
                </td>
            </tr>
            <tr>
                <td>
                    Clave:
                </td>
                <td>
                    <input name="Clave" type="password" class="validable" validation="required true" errormessage="Ingrese su clave" />
                </td>
            </tr>
        </table>
        </form>
        <br />
        <div class="options">
            <input id="btnEntrar" type="button" value="Entrar" /><br />
            <br />
            <a href="#" id="lnkRegistro">Disfruta la vida ¡Registrate!</a>
        </div>
    </div>
</div>
<script type="text/javascript">
    var login = new Pe.Edu.Upc.NTravel.Site.Login();
    login.inicializar();
</script>
